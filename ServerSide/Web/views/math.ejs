<div class="bgimage" >
	<% include header %>
		<% include navbar %>
		<div class="container-fluid h-100 " style="margin-top:70px;">
			<div class="row" style=" height:100vh;">
				<div class="col-6 offset-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center"><b>數學運算服務操作介面</b></h5>
                            <p class="card-text">請輸入數字進行運算</p>
                            <div> 
                                <div class="form-group">
                                    <label for="number1">數字1</label>
                                    <input type="number" class="form-control" id="number1" placeholder="Enter number1">
                                </div>
                                <div class="form-group">
                                    <label for="number2">數字2</label>
                                    <input type="number" class="form-control" id="number2" placeholder="Enter number1">
                                </div>

                                <div class="form-group">
                                        <label for="result">答案</label>
                                        <input type="number" class="form-control" id="result" placeholder="result...">
                                </div>
                                <div class="pt-3 text-center">
                                        <button id="btn1" class="btn btn-success btn-lg"><b>相加</b></button>
                                        <button id="btn2" class="btn btn-success btn-lg"><b>相減</b></button>
                                        <button id="btn3" class="btn btn-success btn-lg"><b>相乘</b></button>
                                        <button id="btn4" class="btn btn-success btn-lg"><b>相除</b></button>
                                        <button id="btn5" class="btn btn-success btn-lg"><b>相餘</b></button>
                                        <button id="btn6" class="btn btn-success btn-lg"><b>次方</b></button>        
                                </div>
                            </div>
                        </div>
                    </div>
                              
                </div>		
			</div>
        </div>
       	<!-- 以下這個匿名函數是jquery的ready事件處理方法，當網頁Ready好的就會自動執行 -->
	<!-- 因此，可以把要註冊的所有事件處理函數及需要先執行的命令放在這個函數內 -->
	<script>
            $(function(){
                // 幫id為btn1的按鈕標籤註冊了點擊事件的處理方法
                // 在jquery及nodejs通常會使用匿名函數作為事件處理方法，比較簡潔
                $('#btn1').click(function(){
                    $.post(
                        '/api/math/' + $('#number1').val() + '/' + $('#number2').val() + '/1',
                        function(data){
                            $('#result').val(data.result)
                        }
                    );
                });
                
                // 幫id為btn2的按鈕標籤註冊了點擊事件的處理方法
                $('#btn2').click(function(){
                    $.post(
                        '/api/math/' + $('#number1').val() + '/' + $('#number2').val() + '/2',
                        function(data){
                            $('#result').val(data.result)
                        }
                    );
                });
                
                // 幫id為btn3的按鈕標籤註冊了點擊事件的處理方法 -->
                $('#btn3').click(function(){
                    $.post(
                        '/api/math/' + $('#number1').val() + '/' + $('#number2').val() + '/3',
                        function(data){
                            $('#result').val(data.result)
                        }
                    );
                });
                
                // 幫id為btn4的按鈕標籤註冊了點擊事件的處理方法
                $('#btn4').click(function(){
                    $.post(
                        '/api/math/' + $('#number1').val() + '/' + $('#number2').val() + '/4',
                        function(data){
                            $('#result').val(data.result)
                        }
                    );
                });
                
                $('#btn5').click(function(){
                    $.post(
                        '/api/math/' + $('#number1').val() + '/' + $('#number2').val() + '/5',
                        function(data){
                            $('#result').val(data.result)
                        }
                    );
                });
                
                $('#btn6').click(function(){
                    $.post(
                        '/api/math/' + $('#number1').val() + '/' + $('#number2').val() + '/6',
                        function(data){
                            $('#result').val(data.result)
                        }
                    );
                });
                            
                // 幫id為btn5的按鈕標籤註冊了點擊事件的處理方法
                $('#btn7').click(function(){
                     window.location.href = '/';
                });
            })		
        </script>
    
	<% include footer %>
</div>
